<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.mills.cs250.toxsense">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_label"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LearnMoreActivity"
            android:label="@string/title_activity_learn_more"
            android:parentActivityName="edu.mills.cs250.toxsense.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mills.cs250.toxsense.MainActivity" />
        </activity>
        <activity
            android:name=".PantryActivity"
            android:label="@string/title_activity_my_pantry"
            android:parentActivityName="edu.mills.cs250.toxsense.MainActivity">
            <meta-data
                android:name="android.app.default_searchable"
                android:value="edu.mills.cs250.toxsense.ChemCompareActivity" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mills.cs250.toxsense.MainActivity" />
        </activity>
        <activity
            android:name=".ChemCompareActivity"
            android:label="@string/title_search_activity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mills.cs250.toxsense.MainActivity" />
        </activity>
        <activity
            android:name=".ExampleActivity"
            android:label="@string/title_activity_example"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mills.cs250.toxsense.MainActivity" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value="edu.mills.cs250.toxsense.ChemCompareActivity" />
        </activity>
    </application>

</manifest>