<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.mills.cs250.dosemakespoison">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LearnMoreActivity"
            android:label="@string/title_activity_learn_more"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mills.cs250.dosemakespoison.MainActivity" />
        </activity>
        <activity
            android:name=".MyPantryActivity"
            android:label="@string/title_activity_my_pantry"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mills.cs250.dosemakespoison.MainActivity" />
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_search_results"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>